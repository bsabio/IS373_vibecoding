{
  "name": "is373_vibecoding",
  "version": "1.0.0",
  "private": true,
  "description": "Project configured with quality gates: Prettier, ESLint, Stylelint, Husky, CI workflow",
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md,html}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md,html}\"",
    "lint:eslint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:stylelint": "stylelint \"**/*.{css,scss,html}\" --ignore-path .stylelintignore || true",
    "lint": "npm run lint:eslint && npm run lint:stylelint",
    "build": "eleventy",
    "eleventy": "eleventy"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,scss,md,html}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "@11ty/eleventy": "^1.0.0"
  },
  "main": ".eslintrc.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bsabio/IS373_vibecoding.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bsabio/IS373_vibecoding/issues"
  },
  "homepage": "https://github.com/bsabio/IS373_vibecoding#readme"
}
